#:kivy 1.0

<VideoFrameSlider>:
    cols: 3
    rows: 1
    size_hint_y: None
    height: 35

    Slider:
        min: 0
        max: 0
        step: 1

    PreviousFrameButton:
        size_hint_x: None
        width: 35
        StackLayout:
            pos: self.parent.pos
            size: self.parent.size
            padding: [2, 0]
            orientation: 'lr-tb'
            Image:
                width: 32
                source: './assets/icons/minus.png'
                size_hint_x: None

    NextFrameButton:
        size_hint_x: None
        width: 35
        StackLayout:
            pos: self.parent.pos
            size: self.parent.size
            padding: [2, 0]
            orientation: 'lr-tb'
            Image:
                width: 32
                source: './assets/icons/plus.png'
                size_hint_x: None