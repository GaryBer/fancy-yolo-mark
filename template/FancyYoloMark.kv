#:kivy 1.0

<RootWidget>:
    cols: 2
    rows: 2

    KivyVideoPlayer:
        id: video_player
        cols: 1
        rows: 3
        
        GridLayout:
            id: controls
            cols: 1
            rows: 4
            size_hint_y: None
            height: 160

            VideoControl:
                id: video_control
                cols: 4
                rows: 1
                size_hint_y: None
                height: 40
                Button:
                    text: "Play"
                    on_press: self.parent.play()
                    size_hint_y: None
                    height: 35
                Button:
                    text: "Pause"
                    on_press: self.parent.pause()
                    size_hint_y: None
                    height: 35
                Button:
                    text: "Step Forward"
                    on_press: self.parent.step_forward()
                    size_hint_y: None
                    height: 35
                Button:
                    text: "Step Backward"
                    on_press: self.parent.step_backward()
                    size_hint_y: None
                    height: 35

            VideoFrameSlider:
                id: video_frame_slider
                size_hint_y: None
                height: 40
                min: 0
                max: 0
                step: 1
                on_touch_down: if self.collide_point(*args[1].pos): self.pause()
                on_touch_up: if self.collide_point(*args[1].pos): self.update_frame_pos()
                on_touch_move: if self.collide_point(*args[1].pos): self.moving()
                on_value: self.set_frame_pos()

            VideoDetails:
                id: video_details

            KivyCameraDetails:
                id: kivy_camera_details

            # KivyCamera:
            #     id: my_camera

    GridLayout:
        id: controls
        cols: 1
        rows: 1
        size_hint_x: None
        width: 200

        Button:
            text: "Lables"
            size_hint_y: None
            height: 35

<VideoDetails>:
    cols: 5
    rows: 1
    size_hint_y: None
    height: 40
    BoxLayout:
        Label:
            text: 'Width: '
        Label:
            id: width
            text: '0'
    BoxLayout:
        Label:
            text: 'Height: '
        Label:
            id: height
            text: '0'
    BoxLayout:
        Label:
            text: 'FPS: '
        Label:
            id: fps
            text: '0'
    BoxLayout:
        Label:
            text: 'Length: '
        Label:
            id: length
            text: '0'
    BoxLayout:
        Label:
            text: 'Frame: '
        Label:
            id: frame_pos
            text: '0'

<KivyCameraDetails>:
    cols: 3
    rows: 1
    size_hint_y: None
    height: 40
    BoxLayout:
        Label:
            text: 'Width: '
        Label:
            id: width
            text: '0'
    BoxLayout:
        Label:
            text: 'Height: '
        Label:
            id: height
            text: '0'
    BoxLayout:
        Label:
            text: 'FPS: '
        Label:
            id: fps
            text: '0'
